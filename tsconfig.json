{
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "public",
      "test",
      "tests",
      "tmp",
      "vendor"
    ],
    "include": [
      "src/**/*"
    ],
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "customConditions": ["module"],
      "allowArbitraryExtensions": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "allowJs": true,
      "checkJs": false,
      "verbatimModuleSyntax": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
  }